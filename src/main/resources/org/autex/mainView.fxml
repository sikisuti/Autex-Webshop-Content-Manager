<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefWidth="800" fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.autex.controller.MainViewController">
   <top>
      <HBox style="-fx-padding: 10;" spacing="10">
         <ComboBox fx:id="cmbSupplierPicker" promptText="Válassz beszállítót..." onAction="#updateSupplierView"/>
          <Label fx:id="lblMissingCredentials" style="-fx-text-fill: red;">Hitelesítő adatok nincsenek beállítva!</Label>
         <Pane HBox.hgrow="ALWAYS" />
         <Button fx:id="btnOpenConfig" text="Beállítások" onAction="#openConfig" />
      </HBox>
   </top>
   <bottom>
      <fx:include fx:id="notification" source="view/notification.fxml"/>
   </bottom>
   <right>
      <VBox alignment="CENTER" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Button text="Frissít" onAction="#openResultView"/>
      </VBox>
   </right>
</BorderPane>