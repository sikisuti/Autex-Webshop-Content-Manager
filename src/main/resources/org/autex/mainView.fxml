<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefWidth="800" fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.autex.controller.MainViewController">
    <top>
        <HBox style="-fx-padding: 10;" spacing="10">
            <TilePane fx:id="tpSupplierPicker" hgap="20" vgap="20"/>
            <Label fx:id="lblMissingCredentials" style="-fx-text-fill: red;">Hitelesítő adatok nincsenek beállítva!</Label>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnOpenConfig" text="Beállítások" onAction="#openConfig" contentDisplay="GRAPHIC_ONLY">
                <graphic>
                    <ImageView>
                        <Image url="@../../img/settings.256x256.png" requestedHeight="30" requestedWidth="30"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>
   <bottom>
      <fx:include fx:id="notification" source="view/notification.fxml"/>
   </bottom>
   <right>
      <VBox alignment="CENTER" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Button fx:id="btnInvoke" text="Indít" onAction="#openResultView"/>
      </VBox>
   </right>
</BorderPane>