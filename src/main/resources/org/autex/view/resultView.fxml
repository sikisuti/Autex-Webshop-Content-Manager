<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.autex.controller.ResultViewController">
    <VBox>
        <TableView fx:id="tvResults" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="Azonosító">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colSku" text="Cikkszám">
                    <cellValueFactory>
                        <PropertyValueFactory property="sku" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colName" text="Név">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colPrice" text="Ár">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colQuantity" text="Készlet">
                    <cellValueFactory>
                        <PropertyValueFactory property="stockQuantity" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colWeight" text="Súly">
                    <cellValueFactory>
                        <PropertyValueFactory property="weight" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colBrand" text="Márka">
                    <cellValueFactory>
                        <PropertyValueFactory property="brand" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colStatus" text="Állapot">
                    <cellValueFactory>
                        <PropertyValueFactory property="status" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <HBox style="-fx-padding: 10 10 10 10;">
            <Button onAction="#save" text="mentés" />
            <Button onAction="#sync" text="szinkronizálás" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#upload" text="feltöltés a webshop-ba" />
        </HBox>
    </VBox>
    <StackPane fx:id="busyVeil" StackPane.alignment="CENTER">
        <Region style="-fx-background-color: rgba(0, 0, 0, 0.4)" />
        <VBox alignment="CENTER" StackPane.alignment="CENTER">
            <ProgressIndicator fx:id="progressIndicator" style="-fx-min-width: 100; -fx-min-height: 100;" VBox.vgrow="ALWAYS" />
            <Label fx:id="lbProgressMessage">
                <font>
                   <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </VBox>
    </StackPane>
</StackPane>
